@model PoolDrills.Web.ViewModels.Drills.AddDrillViewModel

@{
    this.ViewData["Title"] = "Add Drill";
}

<div class="text-center">
    <h1 class="headings">SUBMIT A DRILL</h1>
</div>

<form asp-controller="Drills" asp-action="Add" method="post">
    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label asp-for="Title"></label>
            <input type="text" asp-for="Title" class="form-control" placeholder="Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Difficulty">Select Difficulty</label>
            <select class="form-control" asp-for="Difficulty" asp-items="Html.GetEnumSelectList<PoolDrills.Data.Models.Enums.Difficulty>()">
            </select>
            <span asp-validation-for="Difficulty" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-12 mb-3">
            <label asp-for="Category">Select Category</label>
            @foreach (var category in Enum.GetValues(typeof(PoolDrills.Data.Models.Enums.Category)))
            {
                <input asp-for="Category" type="checkbox" value="@((PoolDrills.Data.Models.Enums.Category)category)">
                <label asp-for="Category">@category</label>
            }
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-12 mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe the drill..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-8 mb-3">
            <label asp-for="ImageUrl"></label>
            <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Drill Image Url...">
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label for="exampleFormControlFile1">Upload Drill Image</label>
            <input type="file" class="form-control-file">
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Add Drill</button>
</form>